<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="chatServer" class="chat.ChatServer">
        <property name="port" value="7777"/>
    </bean>

    <context:annotation-config/>

    <bean class="commands.CommandManager"/>

    <!-- commands -->
    <bean id="sendToAll" class="commands.SendToAllCommandAction"/>
    <bean id="sendToUser" class="commands.SendToUserCommandAction"/>
    <bean id="getServerTime" class="commands.GetServerTimeCommandAction"/>

</beans>